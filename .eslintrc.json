{
    "env": {
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "extends": [
      "eslint:recommended"
     ],
    "rules": {
        "quotes": [
            2, 
            "double", 
            { "avoidEscape": true }
        ],
        "indent": [
            "error", 
            2
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}